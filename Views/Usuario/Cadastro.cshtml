@model CadastroUsuarioModel
@{
    ViewData["Title"] = "Cadastro de Usuarios";
}

<h1 class="row justify-content-md-center">Cadastro de Usuarios</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Usuario.usuario_nome">Nome</label>
                <input required asp-for="Usuario.usuario_nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_login">Login</label>
                <input required asp-for="Usuario.usuario_login" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_senha">Senha</label>
                <input required type="password" asp-for="Usuario.usuario_senha" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_tipo">Tipo</label>
                <select required asp-for="Usuario.usuario_tipo" class="form-control">
                    <option value="Admin">Administrador</option>
                    <option value="User">Usuario</option>
                </select>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>