@model CadastroUsuarioModel
@{
    ViewData["Title"] = "Edição de Usuario";
}

<h1 class="row justify-content-md-center">Edição de Usuario</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Usuario.usuario_id" />
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Usuario.usuario_nome">Nome</label>
                <input asp-for="Usuario.usuario_nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_login">Login</label>
                <input asp-for="Usuario.usuario_login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_senha">Senha</label>
                <input type="password" asp-for="Usuario.usuario_senha" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Usuario.usuario_tipo">Tipo</label>
                <select required asp-for="Usuario.usuario_tipo" class="form-control">
                    @foreach (string tipo in Model.TiposUsuario)
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>
</div>